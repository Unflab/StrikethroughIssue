<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StrikethroughIssue.MainPage2">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout
                Spacing="25"
                Padding="30,0"
                VerticalOptions="Center">

                <Label x:Name="MyLabel"
                    Text="Ready"
                    TextDecorations="{Binding TextDecoration}"
                    FontSize="32"
                    HorizontalOptions="Center" />

                <Button
                    x:Name="CounterBtn"
                    Text="Click me"
                    Clicked="CounterBtn_Clicked"
                    HorizontalOptions="Center" />

                <HorizontalStackLayout HorizontalOptions="Center">
                    <CheckBox x:Name="MyCheck" VerticalOptions="Center" CheckedChanged="MyCheck_CheckedChanged" />
                    <Label Text="Strikethrough" VerticalOptions="Center" />
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>
