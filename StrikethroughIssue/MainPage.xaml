<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:StrikethroughIssue"
             x:Class="StrikethroughIssue.MainPage"
             x:DataType="local:SampleViewModel">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout
                Spacing="25"
                Padding="30,0"
                VerticalOptions="Center">

                <Label
                    Text="{Binding Text}"
                    TextDecorations="{Binding TextDecoration}"
                    FontSize="32"
                    HorizontalOptions="Center" />

                <Button
                    x:Name="CounterBtn"
                    Text="Click me"
                    Command="{Binding MyCommand}"
                    HorizontalOptions="Center" />

                <HorizontalStackLayout HorizontalOptions="Center">
                    <CheckBox IsChecked="{Binding IsChecked}" VerticalOptions="Center" />
                    <Label Text="Strikethrough" VerticalOptions="Center" />
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>
